<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TorchFragment">

    <RelativeLayout
        android:id="@+id/flashLayout"
        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/bntFlashbg"
            android:text="ON"
            android:textSize="30sp"
            android:textColor="@color/Green_Dark_Lite"
            android:background="@drawable/round_green"
            android:layout_centerInParent="true"
            android:layout_width="160dp"
            android:layout_height="160dp" />

        <Button
            android:id="@+id/bntFlash"
            android:text="ON"
            android:textSize="30sp"
            android:textColor="@color/Green_Dark_Lite"
            android:background="@drawable/round_white"
            android:layout_centerInParent="true"
            android:layout_width="80dp"
            android:layout_height="80dp" />

    </RelativeLayout>

    <Button
        android:id="@+id/bntBlink"
        android:text="Blink"
        android:textSize="20sp"
        android:textAllCaps="true"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/flashLayout"
        android:textColor="@color/white"
        android:background="@drawable/round_green"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/bntScreenFlash"
        android:text="Screen"
        android:textSize="20sp"
        android:textAllCaps="true"
        android:layout_marginTop="20dp"
        android:background="@color/Green_Dark"
        android:layout_below="@+id/bntBlink"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_width="120dp"
        android:layout_height="60dp" />


</RelativeLayout>