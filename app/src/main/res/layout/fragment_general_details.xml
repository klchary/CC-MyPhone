<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResumeClassesAndFragments.GeneralDetailsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/layoutPPBottom"
        android:orientation="vertical"
        android:weightSum="2">

        <RelativeLayout
            android:id="@+id/hobbiesLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <EditText
                android:id="@+id/etHobbies"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_toStartOf="@+id/addHobbies"
                android:hint="Hobbies"
                android:inputType="text"
                android:maxLines="1" />

            <Button
                android:id="@+id/addHobbies"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:background="@color/Green_Normal"
                android:text="Add"
                android:textColor="@color/Black"
                android:textSize="18sp" />

            <Button
                android:id="@+id/showHideHobbies"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/etHobbies"
                android:background="@color/Yello_Lite"
                android:drawableEnd="@drawable/ic_dropdown"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:text="Hobbies"
                android:textColor="@color/Black"
                android:textSize="18sp" />

            <ListView
                android:id="@+id/hobbiesListView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/showHideHobbies"
                android:scrollbars="none">

            </ListView>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/languageLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/addLanguageLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TableLayout
                    android:id="@+id/languagesTableLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="6dp"
                    android:stretchColumns="1">

                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="50dp">

                        <EditText
                            android:id="@+id/etLanguage"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_column="1"
                            android:gravity="start|center"
                            android:hint="English"
                            android:textColor="@color/Black"
                            android:textSize="18sp" />

                        <CheckBox
                            android:id="@+id/cbRead"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_column="2"
                            android:text="Read" />

                        <CheckBox
                            android:id="@+id/cbWrite"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_column="3"
                            android:text="Write" />

                        <CheckBox
                            android:id="@+id/cbSpeak"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_column="4"
                            android:text="Speak" />

                        <ImageButton
                            android:id="@+id/doneAddLanguage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_column="5"
                            android:layout_gravity="center"
                            android:layout_marginStart="4dp"
                            android:background="@color/Green_Normal"
                            android:padding="6dp"
                            android:src="@drawable/ic_done" />

                    </TableRow>

                </TableLayout>

            </LinearLayout>

            <Button
                android:id="@+id/showHideLanguages"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/addLanguageLayout"
                android:background="@color/Yello_Lite"
                android:drawableEnd="@drawable/ic_dropdown"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:text="Languages Known"
                android:textColor="@color/Black"
                android:textSize="18sp" />

            <ListView
                android:id="@+id/languagesListView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/showHideLanguages"
                android:scrollbars="none">

            </ListView>


        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutPPBottom"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:weightSum="2">

        <Button
            android:id="@+id/btnBack"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/Green_Normal"
            android:text="Professional Qualifications"
            android:textAllCaps="false"
            android:textColor="@color/Black" />

        <Button
            android:id="@+id/btnNext"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/Green_Normal"
            android:text="Professional Details"
            android:textAllCaps="false"
            android:textColor="@color/Black" />

    </LinearLayout>

</RelativeLayout>